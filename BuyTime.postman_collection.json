{
	"info": {
		"name": "BuyTime API",
		"description": "BuyTime backend API for screen time management.\n\nSetup:\n1. Set `base_url` variable (default: http://localhost:8080)\n2. Set `clerk_jwt` variable with a valid Clerk JWT token for authenticated endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080"
		},
		{
			"key": "clerk_jwt",
			"value": "YOUR_CLERK_JWT_HERE"
		}
	],
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						},
						"description": "Check server and database health. No auth required."
					}
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{clerk_jwt}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/me",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "me"]
						},
						"description": "Get the authenticated user's profile, balance, and stats."
					}
				},
				{
					"name": "Update Current User",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{clerk_jwt}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"displayName\": \"New Name\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/me",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "me"]
						},
						"description": "Update the authenticated user's display name."
					}
				},
				{
					"name": "Delete Current User",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{clerk_jwt}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/me",
							"host": ["{{base_url}}"],
							"path": ["api", "users", "me"]
						},
						"description": "Delete the authenticated user and all associated data (cascades)."
					}
				}
			]
		},
		{
			"name": "Webhooks",
			"item": [
				{
					"name": "Clerk Webhook - user.created",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "svix-id",
								"value": "msg_test123"
							},
							{
								"key": "svix-timestamp",
								"value": "1234567890"
							},
							{
								"key": "svix-signature",
								"value": "v1_REPLACE_WITH_VALID_SIGNATURE"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"type\": \"user.created\",\n  \"data\": {\n    \"id\": \"user_test123\",\n    \"first_name\": \"John\",\n    \"last_name\": \"Doe\",\n    \"email_addresses\": [\n      {\n        \"email_address\": \"john@example.com\"\n      }\n    ]\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/webhooks/clerk",
							"host": ["{{base_url}}"],
							"path": ["webhooks", "clerk"]
						},
						"description": "Simulates a Clerk user.created webhook. Note: requires valid Svix signature headers to pass verification."
					}
				},
				{
					"name": "Clerk Webhook - user.updated",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "svix-id",
								"value": "msg_test456"
							},
							{
								"key": "svix-timestamp",
								"value": "1234567890"
							},
							{
								"key": "svix-signature",
								"value": "v1_REPLACE_WITH_VALID_SIGNATURE"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"type\": \"user.updated\",\n  \"data\": {\n    \"id\": \"user_test123\",\n    \"first_name\": \"Jane\",\n    \"last_name\": \"Doe\",\n    \"email_addresses\": [\n      {\n        \"email_address\": \"jane@example.com\"\n      }\n    ]\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/webhooks/clerk",
							"host": ["{{base_url}}"],
							"path": ["webhooks", "clerk"]
						},
						"description": "Simulates a Clerk user.updated webhook. Note: requires valid Svix signature headers to pass verification."
					}
				},
				{
					"name": "Clerk Webhook - user.deleted",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "svix-id",
								"value": "msg_test789"
							},
							{
								"key": "svix-timestamp",
								"value": "1234567890"
							},
							{
								"key": "svix-signature",
								"value": "v1_REPLACE_WITH_VALID_SIGNATURE"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"type\": \"user.deleted\",\n  \"data\": {\n    \"id\": \"user_test123\"\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/webhooks/clerk",
							"host": ["{{base_url}}"],
							"path": ["webhooks", "clerk"]
						},
						"description": "Simulates a Clerk user.deleted webhook. Note: requires valid Svix signature headers to pass verification."
					}
				}
			]
		}
	]
}
